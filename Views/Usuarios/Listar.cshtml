@model IEnumerable<CRUD1.Models.ModelUsuarios>

@{
    ViewData["Title"] = "Listar";
}

<h1>Listado de Usuarios</h1>

<p>
    <a asp-action="Crear">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contraseña)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contraseña)
            </td>
            <td>
                    @Html.ActionLink("Editar", "Editar", new { id=item.id_usuario }) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id=item.id_usuario })
            </td>
        </tr>
}
    </tbody>
</table>
