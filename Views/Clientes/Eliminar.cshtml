@model CRUD1.Models.ModelClientes

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
<div class="card-header">
   Eliminar Clientes
</div>
<div class="card-body">
    <form asp-action="Eliminar" asp-controller="Clientes" method="post">
        <input asp-for="clientes_ID" type="hidden" class="form-control" />
       
        <div class="alert alert-danger" role="alert">
            ¿Desea eliminar el Cliente? :@Html.DisplayNameFor(model => model.clientes_ID)
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Listar" asp-controller="Clientes" class="btn btn-warning">Volver al listado</a>
    </form>
</div>
