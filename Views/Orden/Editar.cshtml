@model CRUD1.Models.ModelOrden

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Orden</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar" asp-controller="Orden" method="post">
            <input asp-for="ordenID" type="hidden" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="productoID" class="control-label"></label>
                <input asp-for="productoID" class="form-control" />
                <span asp-validation-for="productoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="clientes_ID" class="control-label"></label>
                <input asp-for="clientes_ID" class="form-control" />
                <span asp-validation-for="clientes_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha_generacion" class="control-label"></label>
                <input asp-for="fecha_generacion" class="form-control" />
                <span asp-validation-for="fecha_generacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha_entrega" class="control-label"></label>
                <input asp-for="fecha_entrega" class="form-control" />
                <span asp-validation-for="fecha_entrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="empleadosID" class="control-label"></label>
                <input asp-for="empleadosID" class="form-control" />
                <span asp-validation-for="empleadosID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listar">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
